<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1 (Top-Left) -->
    <item>
        <shape>
            <gradient
                android:startColor="#FF3366"
                android:endColor="#FF9900"
                android:type="linear"
                android:angle="0"/>
        </shape>
    </item>

    <!-- Layer 2 (Top-Right) -->
    <item>
        <shape>
            <gradient
                android:startColor="#FF9900"
                android:endColor="#66FF33"
                android:type="linear"
                android:angle="90"/>
        </shape>
    </item>

    <!-- Layer 3 (Bottom-Left) -->
    <item>
        <shape>
            <gradient
                android:startColor="#66FF33"
                android:endColor="#3366FF"
                android:type="linear"
                android:angle="180"/>
        </shape>
    </item>

    <!-- Layer 4 (Bottom-Right) -->
    <item>
        <shape>
            <gradient
                android:startColor="#3366FF"
                android:endColor="#FF3366"
                android:type="linear"
                android:angle="270"/>
        </shape>
    </item>

</layer-list>